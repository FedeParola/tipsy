{
  "positive-integer": {
    "type": "integer",
    "minimum": 1
  },
  "non-negative-integer": {
    "type": "integer",
    "minimum": 0
  },
  "ip-address": {
    "allOf": [
      {"type": "string"},
      {"title": "IP address",
       "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"},
      {"title": "addr shouldn't end with .0",
       "not": { "pattern": "\\.0?0?0$" } }
    ]
  },
  "mac-address": {
    "title": "mac address",
    "type": "string",
    "pattern": "^([a-fA-F0-9]{2}:){5}[a-fA-F0-9]{2}$"
  },
  "mac-address-or-null": {
    "anyOf": [
      {"$ref": "#/mac-address"},
      {"type": "null"}
    ]
  }
}
